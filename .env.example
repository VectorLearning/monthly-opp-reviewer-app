# Salesforce Authentication Configuration
# Copy this file to .env and fill in your actual credentials

# Option 1: OAuth2 Authentication (Recommended)
# Get these from your Salesforce Connected App
SALESFORCE_CONSUMER_KEY=your_consumer_key_here
SALESFORCE_CONSUMER_SECRET=your_consumer_secret_here
SALESFORCE_ACCESS_TOKEN=your_access_token_here
SALESFORCE_INSTANCE_URL=https://your-instance.salesforce.com

# Option 2: Username/Password Authentication
# Use this if OAuth is not available
SALESFORCE_USERNAME=your_username@company.com
SALESFORCE_PASSWORD=your_password_here
SALESFORCE_SECURITY_TOKEN=your_security_token_here
SALESFORCE_DOMAIN=test  # Use 'test' for sandbox, 'login' for production

# Optional: Custom domain for Lightning URLs
SALESFORCE_CUSTOM_DOMAIN=your-company.lightning.force.com